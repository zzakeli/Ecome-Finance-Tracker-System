<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/income_category_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomeCategoryFragment">
    <LinearLayout
        android:id="@+id/category_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1">
        <Button
            android:id="@+id/depositsCategory"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Deposits"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/salaryCategory"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Salary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/savingsCategory"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Savings"
            android:textSize="11sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>